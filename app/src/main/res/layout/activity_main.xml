<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:weightSum="4"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideLine"
        android:layout_width="1dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"
        android:layout_height="match_parent"/>
    <ImageView
        android:id="@+id/storyImageView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guideLine"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="64dp"
        android:src="@drawable/my_story"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/storyTextView"
        app:layout_constraintTop_toBottomOf="@id/storyImageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guideLine"
        android:layout_marginTop="16dp"
        android:text="My story"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        app:layout_constraintTop_toTopOf="@id/scheduleImageView"
        app:layout_constraintStart_toEndOf="@id/scheduleImageView"
        android:text="1"
        android:gravity="center"
        android:background="#d32f2f"
        android:layout_width="20dp"
        android:layout_height="20dp"/>
    <ImageView
        android:id="@+id/scheduleImageView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/guideLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/scheduleTextVIew"
        android:layout_marginTop="64dp"
        android:src="@drawable/schedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/scheduleTextVIew"
        android:text="Schedule"
        app:layout_constraintTop_toBottomOf="@id/scheduleImageView"
        app:layout_constraintStart_toEndOf="@id/guideLine"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/checkTextView"
        app:layout_constraintTop_toBottomOf="@id/storyTextView"
        app:layout_constraintEnd_toStartOf="@id/scheduleTextVIew"
        app:layout_constraintStart_toEndOf="@id/storyTextView"
        android:layout_marginTop="128dp"
        app:layout_constraintBottom_toTopOf="@id/imageButton"
        android:text="Check-In"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:textAllCaps="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/imageButton"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/checkTextView"
        app:layout_constraintStart_toEndOf="@id/storyTextView"
        app:layout_constraintEnd_toStartOf="@id/scheduleTextVIew"
        android:background="@drawable/check_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/checkImageView"
        android:src="@drawable/unnamed"
        app:layout_constraintTop_toTopOf="@id/scheduleImageView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/mapImageView"
        app:layout_constraintTop_toBottomOf="@id/checkImageView"
        app:layout_constraintEnd_toStartOf="@id/guideLine"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:src="@drawable/map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        app:layout_constraintTop_toBottomOf="@id/mapImageView"
        app:layout_constraintEnd_toStartOf="@id/guideLine"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:text="Map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        app:layout_constraintTop_toBottomOf="@id/checkImageView"
        app:layout_constraintStart_toEndOf="@id/messagesImageView"
        android:layout_marginStart="16dp"
        android:text="1"
        android:gravity="center"
        android:background="#d32f2f"
        android:textSize="15sp"
        app:layout_constraintTop_toTopOf="@id/messagesImageView"
        android:layout_width="20dp"
        android:layout_height="20dp"/>

    <ImageView
        android:id="@+id/messagesImageView"
        app:layout_constraintTop_toBottomOf="@id/checkImageView"
        app:layout_constraintStart_toEndOf="@id/guideLine"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:src="@drawable/messages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        app:layout_constraintTop_toBottomOf="@id/messagesImageView"
        app:layout_constraintStart_toEndOf="@id/guideLine"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:text="Messages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>